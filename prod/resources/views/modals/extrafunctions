            <!-- ********** begin script to display additional text boxes depending on question type option selected ********** -->
                <script language = "javascript">
                function change_options(q_type_selected)
                   {
                    // var q_type_selected = document.getElementById('q_type').options[document.getElementById(add_mod_form.q_type).selectedIndex].value');
//                     var q_type_selected = document.add_mod_form.q_type.value; 
                    var x = document.getElementById('answer_label');
                    var y = document.getElementById('a_options');
                    var z = document.getElementById('a_more_options');
                
                    switch(q_type_selected){
                        case 'drop_down_list':
                            x.style.display='inline-block';
                            document.getElementById('answer_label_text').innerHTML="Input up to 15 Drop-Down List Options:";
                            y.style.display='inline-block';
                            z.style.display='inline-block';
                            break;
                        case 'check_box':
                            x.style.display = 'inline-block';
                            document.getElementById('answer_label_text').innerHTML = "Input up to 6 Check-Box List Options:";
                            y.style.display = 'inline-block';
                            z.style.display='none';
                            break;
                        case 'radio_button':
                            x.style.display = 'inline-block';
                            document.getElementById('answer_label_text').innerHTML = "Input up to 15 Radio Button List Options:";
                            y.style.display = 'inline-block';
                            z.style.display='none';
                            break;    
                        default:
                            x.style.display='none';
                            document.getElementById('answer_label_text').innerHTML="";
                            y.style.display='none';
                            z.style.display='none';
                            break;

                        
                    }
                }
                </script> 
            <!-- ********** end of script to display additional text boxes depending on question type option selected ********** -->

